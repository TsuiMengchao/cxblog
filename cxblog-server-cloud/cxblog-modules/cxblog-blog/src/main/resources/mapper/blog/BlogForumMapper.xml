<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="me.mcx.blog.mapper.BlogForumMapper">
    
    <resultMap type="BlogForum" id="BlogForumResult">
        <result property="id"    column="id"    />
        <result property="userId"    column="user_id"    />
        <result property="talkId"    column="talk_id"    />
        <result property="content"    column="content"    />
        <result property="site"    column="site"    />
        <result property="imgUrl"    column="img_url"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectBlogForumVo">
        select id, user_id, talk_id, content, site, img_url, create_by, create_time, update_by, update_time, remark from blog_forum
    </sql>

    <select id="selectBlogForumList" parameterType="BlogForum" resultMap="BlogForumResult">
        <include refid="selectBlogForumVo"/>
        <where>  
            <if test="userId != null  and userId != ''"> and user_id = #{userId}</if>
            <if test="talkId != null "> and talk_id = #{talkId}</if>
            <if test="content != null  and content != ''"> and content = #{content}</if>
            <if test="site != null  and site != ''"> and site = #{site}</if>
            <if test="imgUrl != null  and imgUrl != ''"> and img_url = #{imgUrl}</if>
        </where>
    </select>
    
    <select id="selectBlogForumById" parameterType="Long" resultMap="BlogForumResult">
        <include refid="selectBlogForumVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertBlogForum" parameterType="BlogForum" useGeneratedKeys="true" keyProperty="id">
        insert into blog_forum
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null and userId != ''">user_id,</if>
            <if test="talkId != null">talk_id,</if>
            <if test="content != null">content,</if>
            <if test="site != null">site,</if>
            <if test="imgUrl != null">img_url,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null and userId != ''">#{userId},</if>
            <if test="talkId != null">#{talkId},</if>
            <if test="content != null">#{content},</if>
            <if test="site != null">#{site},</if>
            <if test="imgUrl != null">#{imgUrl},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateBlogForum" parameterType="BlogForum">
        update blog_forum
        <trim prefix="SET" suffixOverrides=",">
            <if test="userId != null and userId != ''">user_id = #{userId},</if>
            <if test="talkId != null">talk_id = #{talkId},</if>
            <if test="content != null">content = #{content},</if>
            <if test="site != null">site = #{site},</if>
            <if test="imgUrl != null">img_url = #{imgUrl},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteBlogForumById" parameterType="Long">
        delete from blog_forum where id = #{id}
    </delete>

    <delete id="deleteBlogForumByIds" parameterType="String">
        delete from blog_forum where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>