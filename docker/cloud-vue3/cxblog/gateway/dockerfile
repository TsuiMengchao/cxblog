# 基础镜像
FROM  openjdk:8-jre
# author
MAINTAINER mcx(https://zhaohaoyue.love)

# 挂载目录
VOLUME /home/mcx/cxblog
# 创建目录
RUN mkdir -p /home/mcx/cxblog
# 指定路径
WORKDIR /home/mcx/cxblog
# 复制jar文件到路径
COPY ./jar/cxblog-gateway.jar /home/mcx/cxblog/cxblog-gateway.jar
# 启动网关服务
ENTRYPOINT ["java","-jar","cxblog-gateway.jar"]
